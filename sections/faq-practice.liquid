{{ 'section-faq.css' | asset_url | stylesheet_tag }}

<div class="c-faqs section-faq">
  <div class="o-pageWidth">
    <div>
      <div class="c-faqs__row">
        {% if section.settings.heading != blank %}
          <div class="c-faqs__row">
            {% render 'heading',
              classes: 'c-faqs__heading c-h3',
              level: section.settings.heading_tag,
              text: section.settings.heading
            %}
            {% if section.settings.description != blank %}
              <p class="c-faqs__description c-b1">
                {{ section.settings.description | strip_html }}
              </p>
            {% endif %}
          </div>
        {% endif %}
        <div class="c-faqsAccordions">
          {% for block in section.blocks %}
            <div class="c-faqsAccordion">
              <div class="c-faqsAccordion__header" data-accordion-item-header="true">
                <h4 class="c-faqsAccordion__heading c-h4">{{ block.settings.question }}</h4>
              </div>
              <div class="c-faqsAccordion__body">
                <div class="c-faqsAccordion__content c-b1">{{ block.settings.answer }}</div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'faq-test.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Power Rack FAQ's"
    },
    {
      "type": "select",
      "label": "Heading Tag",
      "id": "heading_tag",
      "default": "h2",
      "options": [
        {
          "label": "H1",
          "value": "h1"
        },
        {
          "label": "H2",
          "value": "h2"
        },
        {
          "label": "H3",
          "value": "h3"
        },
        {
          "label": "H4",
          "value": "h4"
        },
        {
          "label": "H5",
          "value": "h5"
        },
        {
          "label": "H6",
          "value": "h6"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "question",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "label": "Question",
          "id": "question"
        },
        {
          "type": "text",
          "label": "Answer",
          "id": "answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}
